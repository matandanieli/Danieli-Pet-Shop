@inject DanieliPetShop.Data.ShopContext _context

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
table, th, td {
  border:1px solid black;
  text-align:center;
}

table {
  margin-left:auto;
  margin-right:auto;
}
</style>

<h1>Admin Area</h1>
<p>
<a asp-action="Index" asp-controller="Insert">Insert a new animal</a>
    <table style="width:50%">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    @foreach (var animal in _context.Animals!)
    {
        <tr>
            <td>@animal.AnimalId</td>
            <td>@animal.Name</td>
            <td>@animal.Description</td>
            <td><a asp-action="EditPage" asp-controller="Admin" asp-route-id="@animal.AnimalId">edit</a></td>
            <td><a asp-action="Delete" asp-controller="Admin" asp-route-id="@animal.AnimalId">Delete</a></td>
        </tr>
    }
    </table>
</p>

